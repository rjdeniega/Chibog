<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/everything"
    tools:context="edu.dlsu.mobidev.chibog.MainActivity">
    <RelativeLayout
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.mapwithmarker.MapsMarkerActivity" />




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:elevation="40dp"
            android:layout_marginBottom="-5dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:id="@+id/pull_up"
                android:text="List of Places"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="7px"
                android:background="?android:attr/selectableItemBackground"
                >
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/hamburger_menu"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:text="LIST OF PLACES"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#262626"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/get_place"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="7px"
                android:background="?android:attr/selectableItemBackground"
                >
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/button_bg"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/search"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="3dp"
                    android:text="CHIBOG!"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#262626"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/favorites"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="7px"
                android:background="?android:attr/selectableItemBackground"
                >
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/favorite"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="3dp"

                    android:text="FAVORITES"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#262626"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hidden_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        android:paddingTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List of Places"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            />
        <ImageButton
            android:id="@+id/close_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/top_line"
            android:orientation="horizontal"
            android:layout_below="@id/close_list"
            android:layout_width="match_parent"
            android:background="#212121"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/no_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="No places have been loaded yet!"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_line"
            android:id="@+id/rv_places"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>
